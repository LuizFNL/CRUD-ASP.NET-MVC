@model UsuarioModel;

@{
    ViewData["Title"] = "Criar usuário";
}

<h1>Criar usuário</h1>

<form asp-action="Criar" class="form-group col-md-3">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome do usuário">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Sobrenome"></label>
        <input asp-for="Sobrenome" class="form-control" placeholder="Digite o sobrenome do usuário">
        <span asp-validation-for="Sobrenome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control" placeholder="Digite o telefone do usuário">
        <span asp-validation-for="Telefone" class="text-danger"></span>
        
    </div>
    <br>
    <div class="col-md-8">
        <button type="submit" value="Criar" class="btn btn-primary"><i class="bi bi-pen"></i> Enviar</button>
        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
    </div>
</form>